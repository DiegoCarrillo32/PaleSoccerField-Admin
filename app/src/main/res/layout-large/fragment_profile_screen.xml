<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#2F80ED"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="86dp"
            android:layout_height="82dp"
            android:background="@null"
            android:contentDescription="@string/backButtonDescription"
            android:src="@drawable/arrow_back_white_large" />

        <Space
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/bloquedPeopleButton"
            android:layout_width="86dp"
            android:layout_height="82dp"
            android:background="@null"
            android:contentDescription="@string/peopleButtonDescription"
            android:src="@drawable/people_icon_large" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView2"
                android:layout_width="364dp"
                android:layout_height="364dp"
                android:layout_gravity="center"
                android:padding="5dp"

                android:src="@drawable/profile"
                app:shapeAppearanceOverlay="@style/circular"
                app:strokeColor="#FFF"
                app:strokeWidth="3dp" />

            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top"
                android:text="@string/playerName"
                android:textAppearance="@style/profileName"
                android:textSize="60sp" />

            <Spinner
                android:id="@+id/spinnerPositions"
                style="@style/SpinnerStyleLarge"
                android:layout_width="448dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_stroke_profile"
                android:dropDownSelector="@color/white"
                android:popupBackground="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="530dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/attributeBackgroundDesc"
                        android:src="@drawable/profile_data_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="32dp"
                        android:paddingRight="32dp">

                        <TextView
                            android:id="@+id/apodo"
                            style="@style/profileAttributes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/nickname"
                            android:textSize="34sp" />

                        <Space
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_weight="2" />

                        <TextView
                            android:id="@+id/nicknameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/nicknameText"
                            android:textAppearance="@style/profileAttributesText"
                            android:textSize="34sp" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="530dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/attributeBackgroundDesc"
                        android:src="@drawable/profile_data_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="32dp"
                        android:paddingEnd="32dp">

                        <TextView
                            android:id="@+id/telefono"
                            style="@style/profileAttributes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/phone"
                            android:textSize="34sp" />

                        <Space
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_weight="2" />

                        <TextView
                            android:id="@+id/telefonoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/phoneText"
                            android:textAppearance="@style/profileAttributesText"
                            android:textSize="34sp" />


                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="530dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/attributeBackgroundDesc"
                        android:src="@drawable/profile_data_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="32dp"
                        android:paddingEnd="32dp">

                        <TextView
                            android:id="@+id/edad"
                            style="@style/profileAttributes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/age"
                            android:textSize="34sp" />

                        <Space
                            android:layout_width="152dp"
                            android:layout_height="48dp"
                            android:layout_weight="2" />

                        <TextView
                            android:id="@+id/edadText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/ageText"
                            android:textAppearance="@style/profileAttributesText"
                            android:textSize="34sp" />


                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="530dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/attributeBackgroundDesc"
                        android:src="@drawable/profile_data_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="32dp"
                        android:paddingEnd="32dp">

                        <TextView
                            android:id="@+id/clasificacion"
                            style="@style/profileAttributes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/classification"
                            android:textSize="34sp" />

                        <Spinner
                            android:id="@+id/clasificacionSpinner"
                            android:layout_width="140dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/classificationText"
                            android:textAppearance="@style/profileAttributesTextLarge" />

                        <ImageButton
                            android:id="@+id/editClassBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:contentDescription="@string/classEditBtn"
                            android:src="@drawable/edit_icon_extra_large" />

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>